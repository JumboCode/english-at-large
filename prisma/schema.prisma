generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String        @id @default(cuid())
  name      String?
  email     String?       @unique
  createdAt DateTime      @default(now()) @map("created_at")
  updatedAt DateTime      @updatedAt @map("updated_at")
  role      UserRole
  clerkId   String        @default("placeholder")
  pending   Boolean       @default(false)
  inviteID  String        @default("none")
  requests  BookRequest[]

  @@map("users")
}

model Book {
  id              Int           @id @default(autoincrement())
  notes           String?
  scanLink        String?
  title           String
  author          String
  description     String
  publisher       String
  releaseDate     String?
  skills          BookSkills[]
  bookType        BookType
  level           BookLevel
  numPages        Int?          @default(0)
  coverURL        String        @default("placeholder")
  availableCopies Int           @default(0)
  copies          Int           @default(0)
  isbn            String[]
  requests        BookRequest[]

  @@map("Books")
}

model BookRequest {
  id          Int           @id @default(autoincrement())
  userId      String
  bookId      Int
  status      RequestStatus
  createdAt   DateTime
  message     String
  bookTitle   String
  requestedOn DateTime
  returnedBy  DateTime
  book        Book          @relation(fields: [bookId], references: [id], onDelete: Cascade)
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("BookRequests")
}

model OnlineResource {
  id        String         @id @default(cuid())
  createdAt DateTime       @default(now()) @map("created_at")
  name      String
  link      String
  level     BookLevel
  topic     ResourceTopic
  skills    BookSkills[]
  format    ResourceFormat

  @@map("OnlineResources")
}

enum UserRole {
  Admin
  Volunteer
  Tutor
}

enum BookSkills {
  Grammar
  Vocab_Building
  Reading
  Writing
  Speaking
  Listening
  Pronounciation
}

enum BookType {
  Reference
  Volunteer_Resource
  Standalone
  Series
}

enum BookLevel {
  Beginner
  High_Beginner
  Low_Intermediate
  Intermediate
  High_Intermediate
  Advanced
}

enum ResourceTopic {
  Holidays
  Culture
}

enum ResourceFormat {
  Worksheet
  Reading
  Video
}

enum RequestStatus {
  Requested
  Hold
  Borrowed
  Lost
  Pickup
  Returned
}
